.post
  p
    font-size: 20px

    code
      background: #fff2f4
      color: #bb3d60
      display: inline-block
      padding: 0 .4rem
      border-radius: 6px

    a
      color: #0099e5
      text-decoration: underline

  img
    width: 100%
    border-radius: 10px
    margin: 2rem 0
    box-shadow: 0 10px 70px rgba(0,0,0,0.15)

  pre
    background: #222
    color: #fff
    border-radius: 10px
    padding: 1rem
    margin: 2rem 0
    display: block
